<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.bcit.tipcalculator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TableActivity" android:configChanges="orientation|screenSize"></activity>
        <activity android:name=".GridActivity" android:configChanges="orientation|screenSize"/>
        <activity android:name=".RelativeActivity" android:configChanges="orientation|screenSize"/>
        <activity android:name=".LinearActivity" android:configChanges="orientation|screenSize"/>
        <activity android:name=".MainActivity" android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ConstraintActivity" android:configChanges="orientation|screenSize"/>
    </application>

</manifest>